<p id="notice"><%= notice %></p>

<h1>Listing Tracks</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email address</th>
      <th>Phone number</th>
      <th>Company name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tracks.each do |track| %>
      <tr>
        <td><%= track.first_name %></td>
        <td><%= track.last_name %></td>
        <td><%= track.email_address %></td>
        <td><%= track.phone_number %></td>
        <td><%= track.company_name %></td>
        <td><%= link_to 'Show', track %></td>
        <td><%= link_to 'Edit', edit_track_path(track) %></td>
        <td><%= link_to 'Destroy', track, method: :delete, data: { confirm: 'Are you sure?' },
        :remote => true, :class => 'delete_track' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<p><%= link_to 'New Track', new_track_path %></p><br>
<p><%= text_field_tag :search, params[:first_name] %>
<%= submit_tag "Search", :name => nil %>
</p><br>
<p><%= link_to "Upload", new_resume_path, class: "btn btn-primary" %></p>
<br>
<p><%= link_to 'Email Address with .com', {controller: 'tracks', action: 'index', :email_address => '.com'}  %></p><br>



 


